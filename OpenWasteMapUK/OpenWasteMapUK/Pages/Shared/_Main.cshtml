@{
    ViewData["AppTitle"] = "OpenWasteMap";
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>@ViewData["AppTitle"] - @ViewData["Title"]</title>

    <link href="/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/lib/fontawesome/css/all.min.css" rel="stylesheet" />
    <link href="/css/site.css" rel="stylesheet">

    @await RenderSectionAsync("parentHead", false)
</head>

<body>
    <nav class="navbar navbar-expand-sm navbar-dark sticky-top bg-dark flex-md-nowrap p-0 flex-row">
        <div class="navbar-brand d-flex justify-content-between col-sm-3 col-md-2 py-0 mr-0">
            <a class="navbar-brand" style="background-color: transparent; box-shadow: unset;" asp-page="/Index">OpenWasteMap</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
        <ul class="navbar-nav collapse navbar-collapse flex-column flex-sm-row ml-2 mr-auto" id="navbarSupportedContent">
            <li class="nav-item">
                <a class="nav-link" asp-page="/Index">Map</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-page="/List">List</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-page="/Reports/ByLocalAuthority">By Local Authority</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-page="/About">About</a>
            </li>
            @*<li class="nav-item">
                    <a class="nav-link" href="#">Share data</a>
                </li>*@
        </ul>
    </nav>

    <div class="container-fluid" id="main-container">
        @RenderBody()
    </div>

    <script src="/lib/jquery/dist/jquery.min.js"></script>
    <script src="/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    @await RenderSectionAsync("parentScripts", false)
</body>
</html>

